<view>
	<view class="userinfo">
		<button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" class="butt10"> 获取头像昵称 </button>
		<block wx:else>
			<image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
			<text class="userinfo-nickname">{{userInfo.nickName}}</text>
		</block>
	</view>
	<view class="list">
	</view>
</view>
<van-cell size="large" icon="user-circle-o" title="个人信息" is-link bind:click="order" />
<van-cell size="large" icon="friends-o" title="关于我们" is-link bind:click="about"/>